@model TextApp.Web.ViewModels.RegisterPageModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>Create a new account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userDto.UserName" class="control-label"></label>
                <input asp-for="userDto.UserName" class="form-control" />
                <span asp-validation-for="userDto.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDto.Password" class="control-label"></label>
                <input asp-for="userDto.Password" class="form-control" type="password" />
                <span asp-validation-for="userDto.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Register admin: </label>
                <input asp-for="ShouldBeAdmin" type="checkbox" class="align-content-end" />
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
